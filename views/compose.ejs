<%- include('partials/header'); -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label class="form-label" for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" autocomplete="off">
  </div>
  <div class="form-group">
    <label class="form-label" for="post">Post</label>
    <textarea class="form-control" name="post" rows="8" ></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include('partials/footer'); -%>
